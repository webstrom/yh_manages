doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport"   content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no")
        title 代理商管理
    body
        div.yh_manage_account#manages_system_agent
            include ../../common/pendingLloan.pug
            div.yh_operation
                a(@click='addAgent') 添加
                a 修改
                a 启用
                a 禁止
                a(@click='Recharge') 充值
                a(@click='CashWithdrawal') 提现
                div.yh_role_search.yh_user_right_input.yh_census_input
                    input(type='text' placeholder='代理商名称' onfocus="this.placeholder=''" onblur="this.placeholder='代理商名称'")
                    input(type='text' placeholder='代理商识别码' onfocus="this.placeholder=''" onblur="this.placeholder='代理商识别码'")
                    select
                        option 状态
                        option 启用
                        option 禁用
                    a
                        i.iconfont.icon-search
                        em 搜索
            div.yh_table
                table
                    thead
                        tr
                            th(width='4%') 选择
                            th 编号
                            th 代理商识别码
                            th 代理商名称
                            th 代理商类型
                            th 账户余额
                            th 账户冻结金额
                            th 退票总金额
                            th 线上放款总金额
                            th 线下放款总金额
                            th 线上还款总金额
                            th 线下还款总金额
                            th 充值金额
                            th 提现金额
                            th(width="15%") 推广链接
                            th(width="5%") 状态
                    tbody
                        tr(v-for='(item,index) in checkboxData')
                            td
                                b
                                    label
                                        input(:id="'input-select-'+index" :name="'input-select-'+index" class="color-input-red" type="checkbox" v-model='checkboxList' :value='index')
                                        label(:for="'input-select-'+index")
                            td(v-html='item.sik')
                            td(v-html='item.role')
                            td(v-html='item.name')
                            td(v-html='item.sbm')
                            td(v-html='item.dis')
                            td(v-html='item.nl')
                            td(v-html='item.sfz')
                            td(v-html='item.zt')
                            td(v-html='item.sj')
                            td(v-html='item.dz')
                            td(v-html='item.qd')
                            td(v-html='item.ywy')
                            td(v-html='item.sb')
                            td(v-html='item.jhsj')
                            td
                                s(v-html='item.hmd')
                div.yh_manages_checked
                    div#yh_manages_lauerpage
                    div.yh_checked_box
                        label
                            input(id='input-id' class="color-input-red" type="checkbox" name="input-id" value="" v-model='checked' @click='checkedAll')
                            label(for="input-id")
                            span 全选
            div#yh_layer_4(style='display:none')
                div.yh_manages_recharge
                    div.yh_detailed
                        p
                            span 代理商名称：
                            input
                        p
                            span 代理商类型：
                            select
                                option 代理商
                                option 财务
            div#yh_layer_5(style='display:none')
                div.yh_manages_recharge
                    div.yh_detailed
                        p
                            span 代理商名称：
                            input
                        p
                            span 代理商识别码：
                            input
                        p
                            span 充值金额：
                            input
            div#yh_layer_6(style='display:none')
                div.yh_manages_recharge
                    div.yh_detailed
                        p
                            span 代理商名称：
                            input
                        p
                            span 代理商识别码：
                            input
                        p
                            span 提现金额：
                            input