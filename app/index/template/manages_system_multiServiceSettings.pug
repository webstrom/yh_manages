    body
        div.yh_manage_account#manages_system_multiServiceSettings
            div.yh_manages_serviceSettings
                a(@click='RuleSetting' :class='Rule?"yh_active_service":""') 规则设置
                a(@click='OpeningSettings' :class='Opening?"yh_active_service":""') 服务开通设置
            div.yh_setting(v-if='Rule')
                div.yh_active_center#MultiServiceSettings
                    div.yh_setting_left
                        div.service_center
                            p
                                a 随手借
                            p
                                span 随手借最低金额
                                input
                                em 元
                            p
                                span 随手借最高金额
                                input
                                em 元
                            p
                                span 随手借借款天数
                                input
                                em 元
                            p
                                span 随手借快速审核费
                                input
                                select
                                    option 元
                                    option 美元
                            p
                                span 随手借资金通道费
                                input
                                em 元
                            p
                                span 随手借服务费率
                                input
                                em %/天
                            p
                                span 随手借利息率
                                input
                                em %/天
                            p
                                span 随手借逾期费率
                                input
                                em %/天
                            p
                                span 随手借最高逾期天数
                                input
                                em 天
                            p.yh_balance
                                span 随手借固定显示金额
                                input
                                input
                                input
                                input
                                input
                            p.yh_fuwufei_input
                                span 服务费扣费方式
                                select
                                    option 前置扣费
                    div.yh_setting_left
                        div.service_center
                            p
                                a 随手借2
                            p
                                span 随手借借款天数
                                input
                                em 天
                            p
                                span 随手借快速审核费
                                input
                                select
                                    option 元
                                    option 美元
                            p
                                span 随手借资金通道费
                                input
                                em 元
                            p
                                span 随手借服务费率
                                input
                                em %/天
                            p
                                span 随手借利息率
                                input
                                em %/天
                            p
                                span 随手借逾期费率
                                input
                                em %/天
                            p
                                span 随手借最高逾期天数
                                input
                                em 天
                    div.yh_setting_right
                        div.service_center
                            p
                                a 享分期
                            p
                                span 享分期最低金额
                                input
                                em 元
                            p
                                span 享分期最高金额
                                input
                                em 元
                            p
                                span 享分期快速审核费
                                input
                                select
                                    option 元
                                    option 美元
                            p
                                span 享分期资金通道费
                                input
                                em 元
                            p
                                span 享分期服务费率
                                input
                                em %/元
                            p
                                span 享分期利息率
                                input
